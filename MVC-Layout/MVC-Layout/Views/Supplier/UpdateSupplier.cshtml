@model MVC_Layout.Models.Supplier

@{
    ViewBag.Title = "UpdateSupplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" value="@Model.CompanyName" name="CompanyName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Contact Name</label>
            <input type="text" value="@Model.ContactName" name="ContactName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Contact Title</label>
            <input type="text" value="@Model.ContactTitle" name="ContactTitle" class="form-control" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" value="@Model.Address" name="Address" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

