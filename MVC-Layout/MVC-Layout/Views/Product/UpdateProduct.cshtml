@model MVC_Layout.Models.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Category Name</label>
            <input type="text" value="@Model.ProductName" name="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" value="@Model.CategoryID" name="CategoryId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" value="@Model.UnitPrice" name="UnitPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" value="@Model.UnitsInStock" name="UnitsInStock" class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>